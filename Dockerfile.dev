# ==========================================================
# üêç Image de d√©veloppement Streamlit + Flask (Python 3.12)
# L√©g√®re, optimis√©e pour le dev, compatible prod
# ==========================================================
FROM python:3.12-slim

# Emp√™che Python de cr√©er des fichiers .pyc et force un flush stdout
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# D√©finir le dossier de travail
WORKDIR /app

# Installer les d√©pendances syst√®me n√©cessaires √† certaines libs (scikit-learn, numpy, etc.)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copier uniquement requirements.txt (pour profiter du cache Docker)
COPY requirements.txt /app/

# Installer les d√©pendances Python
RUN pip install --no-cache-dir -r requirements.txt

# Copier le reste du projet
COPY . /app

# Exposer le port utilis√© par Streamlit
EXPOSE 8501

# Lancer Streamlit en mode dev (auto reload)
CMD ["streamlit", "run", "Scripts/app/main.py", "--server.address=0.0.0.0", "--server.port=8501", "--server.runOnSave=true"]
